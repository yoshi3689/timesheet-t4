@model TimesheetApp.Models.ApplicationUser

@{
    ViewData["Title"] = "Details";
}


<div>
    <h1 class="col-sm-10">Details for
        @Html.DisplayFor(model => model.FirstName)
    </h1>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SickDays)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SickDays)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlexTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlexTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.JobTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.JobTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LabourGradeCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LabourGradeCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Supervisor)
        </dt>
        @if (Model.Supervisor != null)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Supervisor!.FirstName) @Html.DisplayFor(model => model.Supervisor!.LastName)
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                No Supervisor assigned
            </dd>
        }

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimesheetApprover)
        </dt>
        @if (Model.TimesheetApprover != null)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TimesheetApprover!.FirstName) @Html.DisplayFor(model =>
            model.TimesheetApprover!.FirstName)
            </dd>
        }
        else
        {
            <p>No Timesheet Approver assigned</p>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary rounded mb-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a class="btn btn-primary rounded mb-2" asp-action="Index">Back to List</a>
</div>
