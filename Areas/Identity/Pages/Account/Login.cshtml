@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <section>
            <form id="account" method="post">
                
                <div class="container">
                    <!-- ACCOUNT CREDENTIALS SECTION -->
                    <h1 class="text-center mb-4"><strong>Login to Your Account</strong></h1>
                    <hr>
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mt-1">
                        <label for="email" class="col-form-label"><strong class="text-label">Email
                                Address</strong></label>
                        <div class="input-group  mb-4">
                            <input asp-for="Input.Email" class="form-control py-3" id="email" autocomplete="username"
                                aria-required="true" placeholder="Enter your email" />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-1">
                        <label for="password" class="col-form-label"><strong
                                class="text-label">Password</strong></label>
                        <div class="mb-4">
                            <input asp-for="Input.Password" class="form-control py-3" autocomplete="current-password"
                                aria-required="true" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log
                            in</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}